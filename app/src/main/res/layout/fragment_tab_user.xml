<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/fragment_tab_user"
    android:orientation="vertical"
    android:background="@color/bg_one_rgba"
    tools:context=".app.fragment.TabUserView">

    <com.google.android.material.tabs.TabLayout
        style="@style/Theme.MegaPelis.TabLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/fragment_tab_user_tabs">

        <com.google.android.material.tabs.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:icon="@drawable/ic_user"/>
        <com.google.android.material.tabs.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_name"/>
        <com.google.android.material.tabs.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:icon="@drawable/ic_menu_white"/>

    </com.google.android.material.tabs.TabLayout>
</FrameLayout>